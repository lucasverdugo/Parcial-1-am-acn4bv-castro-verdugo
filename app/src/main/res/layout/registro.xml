<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/tituloRegistro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header">

        <TextView
            android:id="@+id/tituloRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/registroTitulo"
            android:textAlignment="center"
            android:textSize="@dimen/titleSize"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelNombreRegistro"
                android:layout_width="@dimen/labelWidth"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/labelNombre"
                android:textSize="@dimen/textSize" />

            <EditText
                android:id="@+id/inputNombreRegistro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/labelNombre"
                android:inputType="text"
                android:text="@string/labelNombre"
                android:textSize="@dimen/textSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelApellidoRegistro"
                android:layout_width="@dimen/labelWidth"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/labelApellido"
                android:textSize="@dimen/textSize" />

            <EditText
                android:id="@+id/inputApellidoRegistro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:text="@string/labelApellido"
                android:textSize="@dimen/textSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelMailRegistro"
                android:layout_width="@dimen/labelWidth"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/lableMail"
                android:textSize="@dimen/textSize" />

            <EditText
                android:id="@+id/inputMailRegistro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:text="@string/lableMail"
                android:textSize="@dimen/textSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelContrasenaRegistro"
                android:layout_width="@dimen/labelWidth"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/labeContraseña"
                android:textSize="@dimen/textSize" />

            <EditText
                android:id="@+id/inputContrasenaRegistro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                android:text="@string/labeContraseña"
                android:textSize="@dimen/textSize" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/fondo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:contentDescription="@string/fondo"
            android:scaleType="centerCrop"
            android:src="@drawable/bienvenida2" />
    </LinearLayout>

    <ImageView
        android:id="@+id/logo2"
        android:layout_width="217dp"
        android:layout_height="46dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/logofinal"
        app:layout_constraintBottom_toBottomOf="@+id/header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRegistro"
        android:layout_width="@dimen/boton"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/boton"
        android:text="@string/registrame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloRegistro" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/yaTengoUsuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegistro" />
</androidx.constraintlayout.widget.ConstraintLayout>